{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["esnext"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
